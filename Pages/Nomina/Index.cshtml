@page
@model ConsultaNomina.Pages.Nomina.IndexModel
@{
    ViewData["Title"] = "Detalle Nomina";
}

<div class="card mt-5">
    <div class="card-header text-center">
        Detalles de nómina
    </div>
    <div class="card-body" style="overflow-x: auto">

        @if(Model.ConceptosNominas.Count() > 0 )
        {
        <table id="tblDetalles" class="table table-striped table-bordered" style="width: 100%">
            <thead>
                <tr>
                    <th class="text-center" scope="col">@Html.DisplayNameFor(m => m.ConceptosNominas.FirstOrDefault().REGISTRO)</th>
                    <th class="text-center" scope="col">@Html.DisplayNameFor(m => m.ConceptosNominas.FirstOrDefault().COD_CONCEPTO)</th>
                    <th class="text-center" scope="col">@Html.DisplayNameFor(m => m.ConceptosNominas.FirstOrDefault().DESC_CONCEPTO)</th>
                    <th class="text-center" scope="col">@Html.DisplayNameFor(m => m.ConceptosNominas.FirstOrDefault().ID_EMPLEADO)</th>
                    <th class="text-center" scope="col">@Html.DisplayNameFor(m => m.ConceptosNominas.FirstOrDefault().DOCUMENTO)</th>
                    <th class="text-center" scope="col">@Html.DisplayNameFor(m => m.ConceptosNominas.FirstOrDefault().APELLIDOS)</th>
                    <th class="text-center" scope="col">@Html.DisplayNameFor(m => m.ConceptosNominas.FirstOrDefault().NOMBRES)</th>
                    <th class="text-center" scope="col">@Html.DisplayNameFor(m => m.ConceptosNominas.FirstOrDefault().VAL_NOMINA)</th>
                    <th class="text-center" scope="col">@Html.DisplayNameFor(m => m.ConceptosNominas.FirstOrDefault().CANTIDAD)</th>
                    <th class="text-center">
                        Acciones
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var detalle in Model.ConceptosNominas)
                {
                <tr>
                    <th cope="row">@Html.DisplayFor(m => detalle.REGISTRO)</th>
                    <td>@Html.DisplayFor(m => detalle.COD_CONCEPTO)</td>
                    <td>@Html.DisplayFor(m => detalle.DESC_CONCEPTO)</td>
                    <td>@Html.DisplayFor(m => detalle.ID_EMPLEADO)</td>
                    <td>@Html.DisplayFor(m => detalle.DOCUMENTO)</td>
                    <td>@Html.DisplayFor(m => detalle.APELLIDOS)</td>
                    <td>@Html.DisplayFor(m => detalle.NOMBRES)</td>
                    <td>@Html.DisplayFor(m => detalle.VAL_NOMINA)</td>
                    <td>@Html.DisplayFor(m => detalle.CANTIDAD)</td>
                    <td class="text-center">
                        <a class="btn btn-success" asp-page="../Nomina/Edit" 
                            asp-route-registro="@detalle.REGISTRO" asp-route-documento="@detalle.DOCUMENTO">
                            <i class="fa-solid fa-pen"></i> Editar</a>
                        <a class="btn btn-danger" asp-page="../Nomina/Delete" 
                            asp-route-registro="@detalle.REGISTRO"  asp-route-documento="@detalle.DOCUMENTO">
                            <i class="fa-solid fa-trash"></i> Borrar</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
        }
        else
        {
        <p class="text-center">No hay detalles de nómina del empleado</p>
        }
    </div>
</div>

<a asp-page="/Index" class="btn btn-success mt-5"><i class="fa-solid fa-chevron-left"></i> Volver</a>
